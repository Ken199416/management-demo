<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.dao.UserDao">

    <resultMap id="BaseResultMap" type="app.entity.User">
        <!--@Table User-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>


    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select *
        from management_paper.User
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          *
        from management_paper.User
        <where>
            <if test="query != null and query != ''">
                and user_name = #{query}
            </if>
        </where>
        order by id desc
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, user_name, password, status
        from management_paper.User
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="email != null">
                and email = #{email}
            </if>
        </where>
    </select>

    <!--新增用户-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true" >
        insert into management_paper.User(user_name, password, status,email)
        values (#{userName}, #{password}, 0,#{email})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update management_paper.User
        <set>
<!--            <if test="userName != null and userName != ''">-->
<!--                user_name = #{userName},-->
<!--            </if>-->
            <if test="password != null and password != ''">
                password = #{password},
            </if>
<!--            <if test="status != null">-->
<!--                status = #{status},-->
<!--            </if>-->
        </set>
        where id = #{id}
    </update>

    <!--通过主键软删-->
    <update id="deleteById">
        update management_paper.User set status = 0 where id = #{id}
    </update>

    <!--  通过用户名查找用户  -->
    <select id="queryByUserName" resultMap="BaseResultMap">
        select * from management_paper.User where user_name = #{userName} and status = 1

    </select>

    <!--  获取查询结构的总数  -->
    <select id="getUserCountBySearch" resultType="int">
        select
        count(*)
        from management_paper.User
        <where>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="email != null">
                and email = #{email}
            </if>
        </where>
</select>



    <select id="getUserByEmail" resultType="int">
        select COUNT(*) from management_paper.User where email = #{email}
    </select>

    <update id="activate">
        update management_paper.User set status = 1 where id = #{id}
    </update>
</mapper>